<!-- List - Arvin -->

<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<main class="container">
    <div id="accordion">
        <div class="card">
            <div class="card-header">
                <div class="collapsed btn container-fluid">
                    <div class="row">  
                        <div class="col-3 text-center">Title</div>
                        <div class="col-3 text-center">Date and Time</div>
                        <div class="col-3 text-center">User</div>
                        <div class="col-1 text-cetner">Priority</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% for (let i = 0; i < TicketList.length; i++) { %>
        <div class="card">
            <div class="card-header">
                <a class="collapsed btn container-fluid" data-bs-toggle="collapse" href="#collapse<% i %>">
                    <div class="row">  
                        <div class="col-3 text-center"><%= TicketList[i].Title %></div>
                        <div class="col-3 text-center"><%= TicketList[i].Date %></div>
                        <div class="col-3 text-center"><%= TicketList[i].Username %></div>
                        <div class="col-1 text-cetner"><%= TicketList[i].Priority %></div>
                    </div>
                </a>
            </div>
            <div id="collapse<% i %>" class="collapse" data-bs-parent="#accordion">
                <div class="card-body">
                    <%= TicketList[i].Description %>
                </div>
            </div>
        </div>
    <% } %>
</main> 


<%- include ../Partials/footer.ejs %>