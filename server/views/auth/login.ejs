<%- include ../partials/header.ejs %>
<%- include ../partials/navbar.ejs %>
<main class="container">
    <% if (message.length > 0) { %>
    <div class="alert alter-danger">
        <%= message %>
    </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Login</h1>
            <form method="post" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username"></label>
                    <input type="text" class="form-control"
                    name="username" 
                    placeholder="Enter username"
                    id="username" required autofocus>
                </fieldset>
                <fieldset class="form-group">
                    <label for="password"></label>
                    <input type="password" class="form-control"
                    name="password" 
                    placeholder="Enter password"
                    id="password" required>
                    or
                    <a href="/users/register" style="text-decoration: none">Register Here</a> <br>
                    <i class="fa-brands fa-github fa-lg"></i><a href="/users/auth/github" style="text-decoration: none">Login with Github</a> <br>
                    <i class="fa-brands fa-google fa-lg"></i><a href="/users/auth/google" style="text-decoration: none">Login with Google</a>
                    <i class="fa-brands fa-facebook fa-lg"></i><a href="#" style="text-decoration: none">Login with Facebook</a>
                </fieldset>
                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success"
                    value="Login">
                    <a href="/"><input type="button" class="btn btn-danger" value="Cancel"></a>
                </fieldset>
            </form>
        </div>
    </div>
</main>
<%- include ../partials/footer.ejs %>

